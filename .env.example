# Environment Configuration Template
# Copy this file to .env.dev, .env.demo, or .env.prod and update the values

# Environment Type (development, production)
FLASK_ENV=development
DEBUG=true

# Mode Configuration
DEMO_MODE=false
SKIP_EMAIL_VERIFICATION=false
DEMO_SESSION_TIMEOUT=600  # 10 minutes (only for demo mode)

# Database Configuration
POSTGRES_USER=propertypal
POSTGRES_PASSWORD=your_secure_password_here
POSTGRES_DB=propertypal

# Security Keys (MUST be changed in production!)
SECRET_KEY=your-secret-key-here
JWT_SECRET_KEY=your-jwt-secret-key-here

# Email Configuration
MAIL_SERVER=smtp.gmail.com
MAIL_PORT=587
MAIL_USERNAME=your-email@example.com
MAIL_PASSWORD=your-email-app-password
MAIL_DEFAULT_SENDER=noreply@propertypal.com

# Frontend Configuration
FRONTEND_URL=http://localhost:3000
REACT_APP_API_URL=http://localhost:5008
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://127.0.0.1:3000

# Port Configuration
BACKEND_PORT=5008
FRONTEND_PORT=3000
PORT=80
HTTPS_PORT=443

# AWS S3 Configuration (Optional - for production file storage)
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_REGION=us-east-1
S3_BUCKET=propertypal-documents
