# Production Environment Configuration
FLASK_ENV=production
DEBUG=false
DEMO_MODE=false
SKIP_EMAIL_VERIFICATION=false

# Database Configuration (Use strong passwords!)
POSTGRES_USER=propertypal_prod
POSTGRES_PASSWORD=CHANGE_THIS_TO_STRONG_PASSWORD
POSTGRES_DB=propertypal_prod

# Security Keys (MUST be changed!)
SECRET_KEY=CHANGE_THIS_TO_STRONG_SECRET_KEY
JWT_SECRET_KEY=CHANGE_THIS_TO_STRONG_JWT_SECRET_KEY

# Email Configuration (Required in production)
MAIL_SERVER=smtp.gmail.com
MAIL_PORT=587
MAIL_USERNAME=your-email@gmail.com
MAIL_PASSWORD=your-app-password
MAIL_DEFAULT_SENDER=noreply@propertypal.com

# Frontend Configuration
FRONTEND_URL=https://propertypal.com
REACT_APP_API_URL=https://propertypal.com/api
CORS_ALLOWED_ORIGINS=https://propertypal.com,https://www.propertypal.com

# Port Configuration
BACKEND_PORT=5008
FRONTEND_PORT=3000
PORT=80
HTTPS_PORT=443

# AWS S3 Configuration (Optional)
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_REGION=us-east-1
S3_BUCKET=propertypal-documents
