# Demo Environment Configuration
FLASK_ENV=production
DEBUG=false
DEMO_MODE=true
SKIP_EMAIL_VERIFICATION=true
DEMO_SESSION_TIMEOUT=600  # 10 minutes

# Database Configuration
POSTGRES_USER=propertypal_demo
POSTGRES_PASSWORD=propertypal_demo_secure_password
POSTGRES_DB=propertypal_demo

# Security Keys (Use strong keys!)
SECRET_KEY=demo-secret-key-replace-with-strong-key
JWT_SECRET_KEY=demo-jwt-secret-key-replace-with-strong-key

# Email Configuration
MAIL_SERVER=smtp.gmail.com
MAIL_PORT=587
MAIL_USERNAME=
MAIL_PASSWORD=
