# Frontend Configuration
FRONTEND_URL=https://demo.propertypal.com
REACT_APP_API_URL=https://demo.propertypal.com/api
CORS_ALLOWED_ORIGINS=https://demo.propertypal.com,http://localhost:3000

# Port Configuration
BACKEND_PORT=5008
FRONTEND_PORT=3000
PORT=80
HTTPS_PORT=443
